{# templates/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}All articles{% endblock %}

{% block body %}
    {% for article in articles %}
        <div>
            <h2>{{ loop.index }} / <a href="{{ url('blog_show', { 'slug': article.slug })}}">{{ article.title }} </a> - Category : {{ article.category.name }}</h2>
            <p>{{ article.content }}</p>
        </div>
    {% else %}
        Aucun article trouv√©.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>
{% endblock %}